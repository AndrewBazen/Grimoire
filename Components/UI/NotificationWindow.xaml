<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grimoire.Components.UI.NotificationWindow"
             Title="Notification">
    <Grid Padding="20">
        <Border x:Name="NotificationFrame" StrokeShape="RoundRectangle 10" Padding="20" Stroke="Transparent">
            <StackLayout>
                <Label x:Name="MessageLabel" 
                       FontSize="18" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
                <Button Text="OK" 
                        HorizontalOptions="Center" 
                        Clicked="OnOkButtonClicked" 
                        Margin="0,15,0,0" />
            </StackLayout>
        </Border>
    </Grid>
</ContentPage> 