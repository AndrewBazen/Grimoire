<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grimoire.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grimoire"
    Title="Grimoire">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Presentation.Views.StartPage}"
        Route="startPage"/>

    <ShellContent
        Title="Theme Settings"
        ContentTemplate="{DataTemplate local:Presentation.Views.ThemeSettingsPage}"
        Route="themeSettingsPage"/>

    <ShellContent
        Title="Archive"
        ContentTemplate="{DataTemplate local:Presentation.Views.ArchivePage}"
        Route="archive"/>

</Shell>
